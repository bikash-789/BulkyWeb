@model Product

<div class="card mb-3 mt-3 shadow border-0">
  <div class="card-header bg-secondary bg-gradient text-white">
    <h3 class="card-title text-uppercase">@Model.Title</h3>
    <h6 class="card-subtitle text-white-50 fw-semibold mb-0"><i>by @Model.Author</i></h6>
  </div>
  <div class="row g-0">
    <div class="col-md-4">
      <img src="@Model.ImageUrl" class="img-fluid " alt="Book Image" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title badge bg-info">@Model.Category.Name</h5>
        <p class="card-text text-body-tertiary"><strong>ISBN:</strong> @Model.ISBN</p>
        <p class="card-text text-body-tertiary"><strong>List Price:</strong> <span class="text-decoration-line-through">@Model.ListPrice.ToString("c")</span></p>
        <div class="row">
          <div class="col-3 border text-center">
            <div class="text-secondary fw-semibold">Quantity</div>
          </div>
          <div class="col-3 border text-center">
            <div class="text-secondary fw-semibold">1-50</div>
          </div>
          <div class="col-3 border text-center">
            <div class="text-secondary fw-semibold">51-100</div>
          </div>
          <div class="col-3 border text-center">
            <div class="text-secondary fw-semibold">100+</div>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-3 text-warning text-center fw-bold">10</div>
          <div class="col-3 text-warning text-center fw-bold">@Model.Price50.ToString("c")</div>
          <div class="col-3 text-warning text-center fw-bold">@Model.Price100.ToString("c")</div>
          <div class="col-3 text-warning text-center fw-bold">@Model.Price100.ToString("c")</div>
        </div>
        <p class="card-text mt-3">@Html.Raw(Model.Description)</p>
        <div class="input-group mb-3">
          <span class="input-group-text bg-primary text-white border-0 fw-semibold" id="inputGroup-sizing-default">Count</span>
          <input type="number" value="1" class="form-control text-end" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
        </div>
        <button type="submit" disabled class="btn btn-primary bg-gradient w-100 py-2 text-uppercase fw-semibold">Add to Cart (Coming Soon...)</button>
      </div>
    </div>
  </div>
  <div class="card-footer text-muted text-end">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to home</a>
  </div>
</div>
